---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="min-h-screen overflow-x-hidden pl-4 sm:pl-24 pb-16">
			<div class="mx-auto max-w-6xl mt-8 relative rounded-lg bg-transparent">
				<div class="panel-gradient opacity-60 w-screen h-full absolute top-0 rounded-3xl z-0"></div>
				<div class="w-screen h-full absolute top-0 rounded-3xl border-sun-gold border-[3px] pointer-events-none  z-10"></div>
				<div class="panel-gradient w-full h-full absolute top-0 rounded-3xl border-emerald-green drop-shadow-lg border-[2px] pointer-events-none"></div>
				<div class="px-8 py-8 relative">
					<slot />
				</div>
			</div>
			<footer>
				<div class="mt-6 flex w-full justify-center font-thin text-[#bce0ff] underline">
					<a href="/impressum">impressum</a>
				</div>
			</footer>
		</main>
	</body>
</html>

<style>
	main {
		background: radial-gradient(circle 1000px at 20% 0%, #2A5B65 50%, #1B5280);
	}
	main .panel-gradient {
		background: radial-gradient(circle at center, #2A5B65, #288B76 80%, #FFCE50 180%);
	}

</style>
<style is:global>

	@font-face {
	font-family: 'bahnschrift';
	src: url('/fonts/bahnschrift.ttf') format('ttf');
	src: url('/fonts/bahnschrift.woff') format('woff');
	src: url('/fonts/bahnschrift.woff2') format('woff2');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
	}

	* {
		@apply font-bahnschrift;
		font-weight: 200;
	}
	h1 {
		@apply font-black uppercase text-4xl text-sun-gold
	}
	h2 {
		@apply font-black uppercase text-2xl pb-3 mt-6 text-sun-gold
	}
	.container p {
		@apply text-white py-2
	}
	.container p {

	}
	.card-content ul li {
		@apply pl-4;

	}
	.card-content ul li::before {
		content: "â—¦";
		@apply absolute text-4xl font-black -ml-5 -mt-2 text-sun-gold;

	}
	.card-content img {
        @apply rounded-[3px] w-full;
		
    }
	.card-content a {
		@apply text-sun-gold hover:text-white underline;
	}
	.content strong {
		@apply text-sun-gold;
	}

	
</style>
